{% extends template.base %}

{% block head %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="/admin-area/styles.css?version={{ server_version }}">
{% endblock %}

{% block content %}
    <div id='admin-area-screen'></div>

    <script src="/admin-area/bundle.js?version={{ server_version }}"></script>
    <script type="text/javascript">
        $('#admin-area-screen').ready(function () {
            setTimeout(function () {
                $('#dlg-multigateway-private').extensionsPopup('multigateway');
                $('#dlg-multigateway-public').extensionsPopup('multigateway');
                $('#dlg-webinars').extensionsPopup('webinars');
            }, 1000)
        });
  </script>
{% endblock %}