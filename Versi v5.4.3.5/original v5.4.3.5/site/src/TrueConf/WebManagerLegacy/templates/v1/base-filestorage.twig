<!DOCTYPE html>
{% apply spaceless %}
{% set debug = debug ? debug : false %}
{% set current_version = server_version ? server_version : '4.0.0' %}
<html>
<head>
    <title>{{ title }}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta property="og:title" content="{{ site._("File storage") }}"/>
    <meta property="twitter:title" content="{{ site._("File storage") }}"/>
    <meta property="og:url" content="{{ site.getCurrentFullURL()|escape }}"/>

    <link rel="shortcut icon" href="/img/favicon.ico"/>
    <link rel="stylesheet" type="text/css" href="/public/css/fonts/roboto.css?version={{ current_version }}">
    <link rel="stylesheet" type="text/css" href="/public/css/files/template.css?version={{ current_version }}">

    {% block head %}{% endblock %}
</head>

<body>
{% block app %}
    <div id="app">
        {% block appbar %}
            <div class="appbar">
                <div class="title">
                    <div class="name">{{ title }}</div>
                    <div class="desc">{{ server_name }}</div>
                </div>
            </div>
        {% endblock %}
        {% block layout %}{% endblock %}
    </div>
{% endblock %}
</body>
</html>
{% endapply %}